<resources>
    <!--Base theme for application-->
    <!--此为主题在基础组件-->
    <style name="NavigationDrawerStyle">
        <!--调整字体大小-->
        <item name="android:textSize">15sp</item>
        <!--调整菜单Item高度-->
        <item name="android:listPreferredItemHeight">40dp</item>
        <item name="android:listPreferredItemHeightLarge">40dp</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
    </style>

    <style name="ButtonStyleBase" parent="Widget.AppCompat.Button.Borderless"/>

    <!--按钮背景色-->
    <attr name="query_grade_button_background" format="reference|color"/>

    <!--PopWin动画特效-->
    <style name="popup_window_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->

    <!-- Base application theme. -->
    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="query_grade_button_background">@color/colorPrimaryDark</item>
        <!--去掉4.4系统下的状态栏阴影-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="GreenTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="GreenTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GreenTheme.DialogFragment" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="GreenTheme.AboutStyle" parent="GreenTheme.NoActionBar" >
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="GreenTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="GreenTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--ActionBar按钮颜色-->
        <item name="colorControlNormal">@color/White</item>
    </style>

    <!--////////////////////////////////////////////////////////////////////////////////////////////////-->
    
    <!--甜心粉主题-->
    <style name="PinkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pink_primary</item>
        <item name="colorPrimaryDark">@color/pink_primary</item>
        <item name="colorAccent">@color/pink_accent</item>
        <item name="query_grade_button_background">@color/pink_primary_dark</item>
        <!--去掉4.4系统下的状态栏阴影-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="PinkTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/pink_accent</item>
        <item name="colorPrimary">@color/pink_primary</item>
    </style>

    <style name="PinkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PinkTheme.DialogFragment" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="PinkTheme.AboutStyle" parent="PinkTheme.NoActionBar" >
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PinkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="PinkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--ActionBar按钮颜色-->
        <item name="colorControlNormal">@color/White</item>
    </style>
    
    <!--轻奢蓝主题-->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_Primary</item>
        <item name="colorPrimaryDark">@color/blue_Primary</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="query_grade_button_background">@color/blue_primary_dark</item>
        <!--去掉4.4系统下的状态栏阴影-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BlueTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue_accent</item>
        <item name="colorPrimary">@color/blue_Primary</item>
    </style>

    <style name="BlueTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlueTheme.DialogFragment" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BlueTheme.AboutStyle" parent="BlueTheme.NoActionBar" >
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BlueTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BlueTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!--ActionBar按钮颜色-->
        <item name="colorControlNormal">@color/White</item>
    </style>
    
</resources>
